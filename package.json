{
  "name": "kirby-content",
  "displayName": "Kirby Content Syntax",
  "description": "Syntax highlighting, smart links, and meta data file creation for Kirby content files",
  "publisher": "medienbaecker",
  "repository": {
    "type": "git",
    "url": "https://github.com/medienbaecker/kirby-content"
  },
  "version": "0.2.2",
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:kirby-content",
    "onLanguage:markdown",
    "onCommand:kirby-content.createMetadataFile"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "kirby-content",
        "extensions": [],
        "filenamePatterns": [
          "**/content/**/*.md",
          "**/content/**/*.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kirby-content",
        "scopeName": "text.kirby-content",
        "path": "./syntaxes/kirby-content.tmLanguage.json",
        "embeddedLanguages": {
          "text.html.markdown": "markdown"
        }
      }
    ],
    "configuration": {
      "title": "Kirby Content",
      "properties": {
        "kirby-content.automaticLinks": {
          "type": "string",
          "default": "kirbytags",
          "enum": [
            "markdown",
            "kirbytags",
            false
          ],
          "enumDescriptions": [
            "Create markdown links: [text](url)",
            "Create kirbytags: (link: url text: text)",
            "Disable automatic link creation"
          ],
          "description": "Automatic link creation when pasting URLs"
        },
        "kirby-content.contentFileExtension": {
          "type": "string",
          "default": "txt",
          "enum": [
            "txt",
            "md"
          ],
          "enumDescriptions": [
            "Use .txt extension for content/metadata files (Kirby default)",
            "Use .md extension for content/metadata files"
          ],
          "description": "File extension for Kirby content and meta data files"
        }
      }
    },
    "commands": [
      {
        "command": "kirby-content.createMetadataFile",
        "title": "Create Meta Data File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourcePath =~ /\\/content\\// && !explorerResourceIsFolder",
          "command": "kirby-content.createMetadataFile",
          "group": "kirby@1"
        }
      ]
    },
    "configurationDefaults": {
      "[kirby-content]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.pasteAs.enabled": true
      }
    },
    "markdown": {
      "extensions": [
        {
          "id": "kirby-content"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "typescript": "^4.4.4"
  }
}
